  <xsl:output indent="yes" />
  <xsl:template match="//response-metadata" />
  <xsl:template match="//target-metadata" />
  <xsl:template match="//metadata" />
  <xsl:template match="//output">
    <Total>
      <xsl:for-each select="line">
        <xsl:if test="contains(., &quot;Total # of bytes             : &quot;)">
          <xsl:value-of select="substring-after(., &quot;Total # of bytes             : &quot;)" disable-output-escaping="no" />
        </xsl:if>
      </xsl:for-each>
    </Total>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
