<?xml version="1.0" encoding="UTF-8"?>
<process>
   <process-def name=":AO-AD-Microsoft_Exchange_v2003:rules">
      <sequence>
         <switch>
            <meta>
               <peer-location>
                  <location>any</location>
               </peer-location>
            </meta>
            <execute-all-applicable-cases>true</execute-all-applicable-cases>
            <case name="BEMRule" applies-if-any-condition-true="true">
               <condition>
                  <document>
                     <input>
                        <from>inputevent</from>
                     </input>
                  </document>
                  <xpath-expression>
                     <xpath><![CDATA[//msg/text()="Low Disk Space on Exchange Server"]]></xpath>
                  </xpath-expression>
                  <gui-data>
                     <from><![CDATA[//msg/text()]]></from>
                     <fromKey><![CDATA[22]]></fromKey>
                     <to><![CDATA["Low Disk Space on Exchange Server"]]></to>
                     <operator><![CDATA[=]]></operator>
                     <type><![CDATA[String]]></type>
                  </gui-data>
               </condition>
               <sequence>
                  <schedule-job>
                     <parameters>
                        <input required="false">
                           <from>inputevent</from>
                           <to>inputevent</to>
                        </input>
                     </parameters>
                     <group>AO-AD-Microsoft_Exchange_v2003</group>
                     <name-prefix>BEMRule</name-prefix>
                     <process-name>:AO-AD-Microsoft_Exchange_v2003:Use_Case:Use_Case_1:Disk Full Errors</process-name>
                  </schedule-job>
               </sequence>
            </case>
         </switch>
      </sequence>
      <meta>
         <peer-location>
            <location>any</location>
         </peer-location>
      </meta>
      <parameters>
         <input>
            <from>inputevent</from>
            <to>inputevent</to>
         </input>
      </parameters>
   </process-def>
</process>

