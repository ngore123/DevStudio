              <parameters>
                <input>
                  <value>Update Change Status</value>
                  <to>request type</to>
                </input>
                <input>
                  <from>start time</from>
                  <to>start time</to>
                </input>
                <output>
                  <from>response xml</from>
                  <to>response xml</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>false</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:call-process[1]</location>
            </call-process>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>configuration name</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[. = 'BMC_AR_System']]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>bao process data</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>status</to>
                  </output>
                </result>
                <xpath-expression>
                  <xpath-replacement-tokens />
                  <xpath><![CDATA[//status/text()]]></xpath>
                </xpath-expression>
              </assignment>
              <assignment>
                <document>
                  <input>
                    <from>bao process data</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>status reason</to>
                  </output>
                </result>
                <xpath-expression>
                  <xpath-replacement-tokens />
                  <xpath><![CDATA[//status-reason/text()]]></xpath>
                </xpath-expression>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:assign[1]</location>
            </assign>
            <call-process>
              <process-name>:AutoPilot-OA-Task_Management:Update Task Status</process-name>
              <parameters>
                <input>
                  <from>configuration name</from>
                  <to>configuration name</to>
                </input>
                <input>
                  <concat>
                    <input required="false">
                      <from>task number</from>
                    </input>
                  </concat>
                  <to>task id</to>
                </input>
                <input>
                  <concat>
                    <input required="false">
                      <from>status</from>
                    </input>
                  </concat>
                  <to>new status</to>
                </input>
                <input>
                  <from>status reason</from>
                  <to>status reason</to>
                </input>
                <output>
                  <from>tasks</from>
                  <to>tasks</to>
                </output>
                <output>
                  <from>success status</from>
                  <to>success status</to>
                </output>
                <output>
                  <from>status message</from>
                  <to>status message</to>
                </output>
                <output>
                  <from>success count</from>
                  <to>success count</to>
                </output>
                <output>
                  <from>failed tasks</from>
                  <to>failed tasks</to>
                </output>
                <output>
                  <from>failure count</from>
                  <to>failure count</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>false</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:call-process[1]</location>
            </call-process>
            <call-process>
              <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Create Response</process-name>
              <parameters>
                <input>
                  <from>success status</from>
                  <to>success status</to>
                </input>
                <input>
                  <from>start time</from>
                  <to>start time</to>
                </input>
                <input>
                  <value>Unknown</value>
                  <to>target name</to>
                </input>
                <input>
                  <value>Update Task Status</value>
                  <to>request type</to>
                </input>
                <input>
                  <from>tasks</from>
                  <to>target response</to>
                </input>
                <input>
                  <from>bao process data</from>
                  <to>fulfillment response</to>
                  <xpath-expression>
                    <xpath-replacement-tokens />
                    <xpath><![CDATA[//response-data]]></xpath>
                  </xpath-expression>
                </input>
                <input>
                  <value>xml</value>
                  <to>data type</to>
                </input>
                <input>
                  <value>Update Task Status failed.</value>
                  <to>error summary</to>
                </input>
                <output>
                  <from>response xml</from>
                  <to>response xml</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>true</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:call-process[2]</location>
            </call-process>
          </sequence>
        </case>
        <location>:switch[1]</location>
      </switch>
    </sequence>
