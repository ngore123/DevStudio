        <to>inputevent</to>
      </input>
      <output global="false" required="false">
        <to>success status</to>
        <from>success status</from>
      </output>
      <output global="false" required="false">
        <to>status message</to>
        <from>status message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>object id</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//alert-message/object-id/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>source</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//alert-message/source/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>form name</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//alert-message/form-name/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>server name</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//alert-message/server-name/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>action</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[normalize-space(substring-before(substring-after(//text, "Action: "), ","))]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>inputevent</from>
            </input>
          </document>
          <result>
            <output>
              <to>configuration name</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//alert-message/object-id/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
      <call-process>
        <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Read Sub Configuration</process-name>
        <parameters>
          <input>
            <from>configuration name</from>
            <to>configuration name</to>
          </input>
          <input global="true">
            <configuration>:BMC-SA-Service_Desk_Automation:FulfillmentIntegrations:Defaults</configuration>
            <to>configuration group</to>
          </input>
          <output>
            <from>configuration xml</from>
            <to>configuration xml</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>true</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <concat>
                      <input>
                        <value>1</value>
                      </input>
                    </concat>
                  </input>
                </document>
                <result>
                  <output>
                    <to>success status</to>
                  </output>
                </result>
                <xpath-expression>
                  <xpath-replacement-tokens />
                  <xpath><![CDATA[concat("Unknown form name: ", .)]]></xpath>
                </xpath-expression>
              </assignment>
              <assignment>
                <output>
                  <to>status message</to>
                  <value>Input event does not contain all the required fields.</value>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[1]</location>
            </assign>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>action</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens>
                <replacement-token name="form name">
                  <input global="false">
                    <from>form name</from>
                  </input>
                </replacement-token>
                <replacement-token name="object id">
                  <input global="false">
                    <from>object id</from>
                  </input>
                </replacement-token>
                <replacement-token name="source">
                  <input global="false">
                    <from>source</from>
                  </input>
                </replacement-token>
                <replacement-token name="configuration name">
                  <input global="false">
                    <from>configuration name</from>
                  </input>
                </replacement-token>
              </xpath-replacement-tokens>
              <xpath><![CDATA[string-length(.) > 0 and string-length("${object id}") > 0 and string-length("${form name}") > 0 and string-length("${source}") > 0 and string-length("${configuration name}") > 0]]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <switch>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>true</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <execute-all-applicable-cases>false</execute-all-applicable-cases>
              <default>
                <sequence>
                  <assign>
                    <assignment>
                      <output>
                        <to>success status</to>
                        <value>1</value>
                      </output>
                    </assignment>
                    <assignment>
                      <document>
                        <input>
                          <from>form name</from>
                        </input>
                      </document>
                      <result>
                        <output>
                          <to>status message</to>
                        </output>
                      </result>
                      <xpath-expression>
                        <xpath-replacement-tokens />
                        <xpath><![CDATA[concat("Unknown form name: ", .)]]></xpath>
                      </xpath-expression>
                    </assignment>
                    <meta>
                      <documentation />
                      <checkpoint>false</checkpoint>
                    </meta>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[1]:assign[1]</location>
                  </assign>
                </sequence>
              </default>
              <case>
                <condition>
                  <document>
                    <input>
                      <from>form name</from>
                    </input>
                  </document>
                  <xpath-expression>
                    <xpath-replacement-tokens />
                    <xpath><![CDATA[text() = "HPD:IncidentInterface"]]></xpath>
                  </xpath-expression>
                </condition>
                <sequence>
                  <call-process>
                    <process-name>:BMC-SA-Service_Desk_Automation:Incident_Management:Read Incident</process-name>
                    <parameters>
                      <input>
                        <from>configuration name</from>
                        <to>configuration name</to>
                      </input>
                      <input>
                        <from>object id</from>
                        <to>incident number</to>
                      </input>
                    </parameters>
                    <meta>
                      <documentation />
                      <run-mode-handling>
                        <run-mode>OCP</run-mode>
                        <allow-step-into>false</allow-step-into>
                      </run-mode-handling>
                      <checkpoint>false</checkpoint>
                    </meta>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[2]:call-process[1]</location>
                  </call-process>
                </sequence>
              </case>
              <location>:switch[1]:sequence[2]:switch[1]</location>
            </switch>
          </sequence>
        </case>
        <location>:switch[1]</location>
      </switch>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>Receive alerts from BMC AR system and extracts and validates notification data. Also, depending on the Remedy form which triggered the alert event, the corresponding process is called to read and validate the change ticket.</description>
        <version></version>
      </documentation>
      <peer-location>
        <location>any</location>
      </peer-location>
