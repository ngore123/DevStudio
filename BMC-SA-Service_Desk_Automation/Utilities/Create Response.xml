        <to>data type</to>
      </input>
      <input global="false" required="false">
        <description>The error summary to be returned in the response for failure cases.</description>
        <from>error summary</from>
        <to>error summary</to>
      </input>
      <output global="false" required="false">
        <to>response xml</to>
        <from>response xml</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>false</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <output>
                  <to>status</to>
                  <value>success</value>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[1]</location>
            </assign>
            <call-process>
              <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Get Time Taken Secs</process-name>
              <unique-id>8f0c6562-767f-4da2-8a40-094a77968037</unique-id>
              <parameters>
                <input>
                  <from>start time</from>
                  <to>start time</to>
                </input>
                <output>
