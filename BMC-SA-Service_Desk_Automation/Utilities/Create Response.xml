                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:call-process[1]</location>
            </call-process>
            <call-process>
              <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Get Response XML Using Template</process-name>
              <parameters>
                <input>
                  <from>fulfillment response</from>
                  <to>target name</to>
                  <xslt-stylesheet>
                    <stylesheet-replacement-tokens>
                      <replacement-token name="target name">
                        <input global="false">
                          <from>target name</from>
                        </input>
                      </replacement-token>
                    </stylesheet-replacement-tokens>
                    <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(normalize-space(//target-name/text())) &gt; 0">
          <xsl:value-of select="//target-name/text()" disable-output-escaping="no" />
        </xsl:when>
        <xsl:otherwise>${target name}</xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                  </xslt-stylesheet>
                </input>
                <input>
                  <from>request type</from>
                  <to>request type</to>
                </input>
                <input>
                  <from>status</from>
                  <to>status</to>
                </input>
                <input>
                  <from>time taken secs</from>
                  <to>time taken seconds</to>
                </input>
                <input>
                  <from>target response</from>
                  <to>target response</to>
                </input>
                <output>
                  <from>response xml</from>
                  <to>response xml</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>false</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:call-process[2]</location>
            </call-process>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>response xml</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>response xml</to>
                  </output>
                </result>
                <xslt-stylesheet>
                  <stylesheet-replacement-tokens>
                    <replacement-token name="incidents">
                      <input global="false">
                        <from>target response</from>
                      </input>
                    </replacement-token>
                  </stylesheet-replacement-tokens>
                  <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:variable name="incidents">${incidents}</xsl:variable>
  <xsl:variable name="rootNodeName" select="name(/*)" />
  <xsl:template match="/">
    <xsl:element name="{$rootNodeName}">
      <xsl:apply-templates select="/*/*" />
    </xsl:element>
  </xsl:template>
  <xsl:template match="@*|node()">
    <xsl:choose>
      <xsl:when test="name(.) = 'response'">
        <response>
          <xsl:copy-of select="$incidents" />
        </response>
      </xsl:when>
      <xsl:otherwise>
        <xsl:if test="name(.) != $rootNodeName">
          <xsl:copy>
            <xsl:apply-templates select="@*|node()" />
          </xsl:copy>
        </xsl:if>
      </xsl:otherwise>
    </xsl:choose>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[2]</location>
            </assign>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>success status</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[. = 'failure']]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <call-process>
              <process-name>:AutoPilot-OA-Errors:Get Error Strings by Summary</process-name>
              <parameters>
                <input>
                  <from>error summary</from>
                  <to>error summary</to>
                  <xslt-stylesheet>
                    <stylesheet-replacement-tokens />
                    <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(.) &gt; 0">
          <xsl:value-of select="string(.)" disable-output-escaping="no" />
        </xsl:when>
        <xsl:otherwise>
          <xsl:text disable-output-escaping="no">Unknown error</xsl:text>
        </xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                  </xslt-stylesheet>
                </input>
                <output>
                  <from>error code</from>
                  <to>error code</to>
                </output>
                <output>
                  <from>error summary</from>
                  <to>error summary</to>
                </output>
