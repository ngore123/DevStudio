            </call-process>
            <assign>
              <assignment>
                <output>
                  <to>status</to>
                  <value>failure</value>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:assign[1]</location>
            </assign>
            <call-process>
              <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Get Time Taken Secs</process-name>
              <unique-id>8f0c6562-767f-4da2-8a40-094a77968037</unique-id>
              <parameters>
                <input>
                  <from>start time</from>
                  <to>start time</to>
                </input>
                <output>
                  <from>time taken secs</from>
                  <to>time taken secs</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>false</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:call-process[2]</location>
            </call-process>
            <call-process>
              <process-name>:BMC-SA-Service_Desk_Automation:Utilities:Get Response XML Using Template</process-name>
              <parameters>
                <input>
                  <from>target name</from>
                  <to>target name</to>
                </input>
                <input>
                  <from>request type</from>
                  <to>request type</to>
                </input>
                <input>
                  <from>status</from>
                  <to>status</to>
                </input>
                <input>
                  <from>time taken secs</from>
                  <to>time taken seconds</to>
                </input>
                <input>
                  <value>xml</value>
                  <to>data type</to>
                </input>
                <input>
                  <from>error code</from>
                  <to>error code</to>
                </input>
                <input>
                  <from>error summary</from>
                  <to>error summary</to>
                </input>
                <input>
                  <from>error details</from>
                  <to>error details</to>
                </input>
                <input>
                  <from>error resolution</from>
                  <to>resolution steps</to>
                </input>
                <input>
                  <from>target response</from>
                  <to>target response</to>
                </input>
                <output>
                  <from>response xml</from>
                  <to>response xml</to>
                </output>
              </parameters>
