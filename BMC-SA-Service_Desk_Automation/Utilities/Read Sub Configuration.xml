<process draft="false" dev-studio-version="7.6.03">
  <process-def name=":BMC-SA-Service_Desk_Automation:Utilities:Read Sub Configuration">
    <parameters>
      <input global="false" required="true">
        <description>Supported values are: BMC_AR_System.

In future:
RemedyForce, HP ServiceCenter, ServiceNow</description>
        <from>configuration name</from>
        <to>configuration name</to>
      </input>
      <input global="false" required="false">
        <description>The sub configuration item to be read:

Example:

ChangeManagement or IncidentManagement</description>
        <from>configuration group</from>
        <to>configuration group</to>
      </input>
      <output global="false" required="false">
        <to>configuration xml</to>
        <from>configuration xml</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <document>
            <input global="true">
              <configuration>:BMC-SA-Service_Desk_Automation</configuration>
            </input>
          </document>
          <result>
            <output>
              <to>configuration xml</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="gname">
                <input global="false">
                  <from>configuration group</from>
                </input>
              </replacement-token>
              <replacement-token name="cname">
                <input global="false">
                  <from>configuration name</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:variable name="elemName" select="'${gname}'" />
  <xsl:variable name="configName" select="'${cname}'" />
  <xsl:template match="/">
    <xsl:choose>
      <xsl:when test="string-length(normalize-space($configName)) &gt; 0  and boolean(//*[name()=$configName]) and string-length(normalize-space($elemName)) &gt; 0  and boolean(//*[name()=$elemName]) ">
        <xsl:copy-of select="//*[name()=$configName]/*[name()=$elemName]" />
      </xsl:when>
      <xsl:otherwise>
        <xsl:copy-of select="." />
      </xsl:otherwise>
    </xsl:choose>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <before-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>Read Configuration Input</value>
              </input>
              <input>
                <from>configuration group</from>
              </input>
            </parameters>
          </log>
        </before-execution>
        <location>:assign[1]</location>
      </assign>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>Given a group name under a configuration return group in the form of an XML.</description>
        <version></version>
      </documentation>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>efef7607-e6d9-4b1e-aaec-72a0f29c1377</process-id>
      <author>Reads a sub configuration</author>
      <category></category>
      <status></status>
      <keywords></keywords>
      <systems></systems>
      <last-modified-by>admin</last-modified-by>
      <last-modified>1443505040807</last-modified>
    </meta>
  </process-def>
</process>