<process draft="false" dev-studio-version="8.2.00">
  <process-def name=":BMC-SA-Event_Orchestration:Utilities:Get Workflow Name by Event Type and Action">
    <parameters>
      <input global="false" required="true">
        <description>All Configurations</description>
        <from>all configurations</from>
        <to>all configurations</to>
      </input>
      <input global="false" required="true">
        <description>Like BMC_TrueSight</description>
        <from>event source type</from>
        <to>event source type</to>
      </input>
      <input global="false" required="true">
        <description>Event type. For example: ServiceDown</description>
        <from>event type</from>
        <to>event type</to>
      </input>
      <input global="false" required="true">
        <description>triage or remediate</description>
        <from>action</from>
        <to>action</to>
      </input>
      <input global="false" required="false">
        <description>Normally set to value as defined in module configuration for not found scenarios, like NOT_FOUND.
Note: The parameter is optional, but using a non-null string is recommended because this will help in the logic downstream</description>
        <from>default workflow name</from>
        <to>default workflow name</to>
      </input>
      <output global="false" required="false">
        <to>workflow name</to>
        <from>workflow name</from>
      </output>
      <output global="false" required="false">
        <to>status</to>
        <from>status</from>
      </output>
      <output global="false" required="false">
        <to>error message</to>
        <from>error message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <before-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>========Find workflow for event type and action Input=======</value>
              </input>
              <input>
                <from>event type</from>
              </input>
              <input>
                <from>action</from>
              </input>
              <input>
                <from>event source type</from>
              </input>
            </parameters>
          </log>
        </before-execution>
        <location>:assign[1]</location>
      </assign>
      <assign>
        <assignment>
          <document>
            <input>
              <from>all configurations</from>
            </input>
          </document>
          <result>
            <output>
              <to>workflow name</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="event type">
                <input global="false">
                  <from>event type</from>
                </input>
              </replacement-token>
              <replacement-token name="action">
                <input global="false">
                  <from>action</from>
                </input>
              </replacement-token>
              <replacement-token name="default name">
                <input global="false">
                  <from>default workflow name</from>
                </input>
              </replacement-token>
              <replacement-token name="event source type">
                <input global="false">
                  <from>event source type</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:variable name="moduleName" select="//Specifics/*[name() = '${event source type}']/EventTypes/*[name() = '${event type}']/ModuleName/text()" />
  <xsl:variable name="action" select="concat(translate(substring('${action}', 1, 1), 'abcdefghijklmnopqrstuvwxyz', 'ABCDEFGHIJKLMNOPQRSTUVWXYZ'),substring('${action}', 2))" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(normalize-space($moduleName)) &gt; 0">
          <xsl:value-of select="concat($moduleName, ':Perform ', $action)" disable-output-escaping="no" />
        </xsl:when>
        <xsl:otherwise>
          <xsl:text disable-output-escaping="no">${default name}</xsl:text>
        </xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>workflow name</from>
            </input>
          </document>
          <result>
            <output>
              <to>status</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens />
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(normalize-space(.)) = 0 or . = 'NOT_FOUND'">
          <xsl:text disable-output-escaping="no">failure</xsl:text>
        </xsl:when>
        <xsl:otherwise>
          <xsl:text disable-output-escaping="no">success</xsl:text>
        </xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>workflow name</from>
            </input>
          </document>
          <result>
            <output>
              <to>error message</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="event type">
                <input global="false">
                  <from>event type</from>
                </input>
              </replacement-token>
              <replacement-token name="action">
                <input global="false">
                  <from>action</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(normalize-space(.)) = 0 or . = 'NOT_FOUND'">
          <xsl:text disable-output-escaping="no">No workflow definition found for event type: '${event type}' and action: '${action}'</xsl:text>
        </xsl:when>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[2]</location>
      </assign>
      <assign>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <before-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>==========Output========</value>
              </input>
              <input>
                <from>workflow name</from>
              </input>
              <input>
                <from>status</from>
              </input>
              <input>
                <from>error message</from>
              </input>
            </parameters>
          </log>
        </before-execution>
        <location>:assign[3]</location>
      </assign>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>OCP</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>This a process template. It has a few basic things.
1. Log Input
2. Log Output
3. Atleast 2 basic output parameters - status and error message.</description>
        <version></version>
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name></log-file-name>
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>true</record-metrics>
      <process-id>c167cbfd-6e85-4045-9640-e2fca66b9d0b</process-id>
      <author>Ranganath Samudrala</author>
      <category>Event Orchestration.</category>
      <status></status>
      <keywords></keywords>
      <systems></systems>
      <last-modified-by>aoadmin</last-modified-by>
      <last-modified>1549165769457</last-modified>
    </meta>
  </process-def>
</process>