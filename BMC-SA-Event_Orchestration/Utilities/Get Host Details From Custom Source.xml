<process draft="false" dev-studio-version="20.02.00">
  <process-def name=":BMC-SA-Event_Orchestration:Utilities:Get Host Details From Custom Source">
    <parameters>
      <input global="false" required="true">
        <from>all configurations</from>
        <to>all configurations</to>
      </input>
      <input global="false" required="true">
        <from>event data</from>
        <to>event data</to>
      </input>
      <input global="false" required="true">
        <from>action id</from>
        <to>action id</to>
      </input>
      <input global="false" required="true">
        <from>authentication token</from>
        <to>authentication token</to>
      </input>
      <input global="false" required="true">
        <from>event source type</from>
        <to>event source type</to>
      </input>
      <output global="false" required="false">
        <to>host connection details</to>
        <from>host connection details</from>
      </output>
      <output global="false" required="false">
        <to>status</to>
        <from>status</from>
      </output>
      <output global="false" required="false">
        <to>error message</to>
        <from>error message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <call-process>
        <process-name>:BMC-SA-Event_Orchestration:Utilities:Get Workflow Name by Event Type and Action</process-name>
        <parameters>
          <input>
            <from>all configurations</from>
            <to>all configurations</to>
          </input>
          <input>
            <from>event source type</from>
            <to>event source type</to>
          </input>
          <input>
            <from>action id</from>
            <to>event type</to>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[substring-before(substring-after(., '-'), '-')]]></xpath>
            </xpath-expression>
          </input>
          <input>
            <from>all configurations</from>
            <to>action</to>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[//Specifics/Defaults/GetHostDetailsSearchKey/text()]]></xpath>
            </xpath-expression>
          </input>
          <input>
            <from>all configurations</from>
            <to>default workflow name</to>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[//Specifics/Defaults/NotfoundWorkflowName/text()]]></xpath>
            </xpath-expression>
          </input>
          <output>
            <from>workflow name</from>
            <to>workflow name</to>
          </output>
          <output>
            <from>status</from>
            <to>status</to>
          </output>
          <output>
            <from>error message</from>
            <to>error message</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>false</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <output>
                  <to>connection details</to>
                  <value></value>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[1]</location>
            </assign>
          </sequence>
        </default>
        <case applies-if-any-condition-true="false">
          <condition>
            <document>
              <input>
                <from>status</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[. = 'success']]></xpath>
            </xpath-expression>
          </condition>
          <condition>
            <document>
              <input>
                <from>workflow name</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[string-length(normalize-space(.)) > 0]]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <call-process>
              <process-name>:AutoPilot-OA-Common_Utilities:BAO_Utilities:REST:Execute Process with Auth Token</process-name>
              <parameters>
                <input>
                  <from>all configurations</from>
                  <to>adapter name</to>
                  <xpath-expression>
                    <xpath-replacement-tokens />
                    <xpath><![CDATA[//Adapters/RESTAdapter/text()]]></xpath>
                  </xpath-expression>
                </input>
                <input>
                  <from>authentication token</from>
                  <to>authentication token</to>
                </input>
                <input>
                  <from>all configurations</from>
                  <to>target url</to>
                  <xpath-expression>
                    <xpath-replacement-tokens />
                    <xpath><![CDATA[//BAO/URL/text()]]></xpath>
                  </xpath-expression>
                </input>
                <input>
                  <from>workflow name</from>
                  <to>process name</to>
                </input>
                <input>
                  <from>event data</from>
                  <to>input parameters</to>
                  <xslt-stylesheet>
                    <stylesheet-replacement-tokens />
                    <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <inputParameters>
      <inputParameter>
        <name>
          <xsl:text disable-output-escaping="no">event data</xsl:text>
        </name>
        <value>
          <xsl:copy-of select="." />
        </value>
      </inputParameter>
    </inputParameters>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                  </xslt-stylesheet>
                </input>
                <output>
                  <from>process output</from>
                  <to>process output</to>
                </output>
                <output>
                  <from>detailed process output</from>
                  <to>detailed process output</to>
                </output>
                <output>
                  <from>status</from>
                  <to>status</to>
                </output>
                <output>
                  <from>error message</from>
                  <to>error message</to>
                </output>
              </parameters>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>false</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:call-process[1]</location>
            </call-process>
            <switch>
              <meta>
                <documentation />
                <run-mode-handling>
                  <run-mode>OCP</run-mode>
                  <allow-step-into>true</allow-step-into>
                </run-mode-handling>
                <checkpoint>false</checkpoint>
              </meta>
              <execute-all-applicable-cases>false</execute-all-applicable-cases>
              <default>
                <sequence>
                  <assign>
                    <assignment>
                      <output>
                        <to>status</to>
                        <value>failure</value>
                      </output>
                    </assignment>
                    <assignment>
                      <document>
                        <input>
                          <from>process output</from>
                        </input>
                      </document>
                      <result>
                        <output>
                          <to>error message</to>
                        </output>
                      </result>
                      <xpath-expression>
                        <xpath-replacement-tokens />
                        <xpath><![CDATA[//errorMessage/text()]]></xpath>
                      </xpath-expression>
                    </assignment>
                    <meta>
                      <documentation />
                      <checkpoint>false</checkpoint>
                    </meta>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[1]:assign[1]</location>
                  </assign>
                </sequence>
              </default>
              <case>
                <condition>
                  <document>
                    <input>
                      <from>process output</from>
                    </input>
                  </document>
                  <xpath-expression>
                    <xpath-replacement-tokens />
                    <xpath><![CDATA[not(boolean(//errorMessage) and string-length(normalize-space(//errorMessage/text())) > 0)]]></xpath>
                  </xpath-expression>
                </condition>
                <sequence>
                  <assign>
                    <assignment>
                      <document>
                        <input>
                          <from>process output</from>
                        </input>
                      </document>
                      <result>
                        <output>
                          <to>host connection details</to>
                        </output>
                      </result>
                      <xslt-stylesheet>
                        <stylesheet-replacement-tokens />
                        <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <xsl:choose>
      <xsl:when test="boolean(//value/*) = 'true'">
        <xsl:copy-of select="//value/*" />
      </xsl:when>
      <xsl:otherwise>
        <value>
          <xsl:choose>
            <xsl:when test="boolean(//value)">
              <xsl:value-of select="//value/text()" disable-output-escaping="no" />
            </xsl:when>
            <xsl:otherwise>
              <xsl:text disable-output-escaping="no">Error: Connection details not retrieved from target workflow.</xsl:text>
            </xsl:otherwise>
          </xsl:choose>
        </value>
      </xsl:otherwise>
    </xsl:choose>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                      </xslt-stylesheet>
                    </assignment>
                    <meta>
                      <documentation />
                      <checkpoint>false</checkpoint>
                    </meta>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[2]:assign[1]</location>
                  </assign>
                  <call-process>
                    <process-name>:AutoPilot-OA-Common_Utilities:XML_Utilities:XML String to XML</process-name>
                    <parameters>
                      <input>
                        <from>host connection details</from>
                        <to>XML String</to>
                      </input>
                      <output>
                        <from>XML</from>
                        <to>host connection details</to>
                      </output>
                    </parameters>
                    <meta>
                      <documentation />
                      <run-mode-handling>
                        <run-mode>OCP</run-mode>
                        <allow-step-into>false</allow-step-into>
                      </run-mode-handling>
                      <checkpoint>false</checkpoint>
                    </meta>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[2]:call-process[1]</location>
                  </call-process>
                  <assign>
                    <assignment>
                      <document>
                        <input>
                          <from>host connection details</from>
                        </input>
                      </document>
                      <result>
                        <output>
                          <to>host connection details</to>
                        </output>
                      </result>
                      <xslt-stylesheet>
                        <stylesheet-replacement-tokens />
                        <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <xsl:copy-of select="//XML/*" />
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                      </xslt-stylesheet>
                    </assignment>
                    <assignment>
                      <output>
                        <to>status</to>
                        <value>success</value>
                      </output>
                    </assignment>
                    <assignment>
                      <output>
                        <to>error message</to>
                        <value></value>
                      </output>
                    </assignment>
                    <meta>
                      <documentation />
                      <checkpoint>false</checkpoint>
                    </meta>
                    <after-execution>
                      <log>
                        <level>debug</level>
                        <parameters>
                          <input>
                            <value>============Custom host connection details====</value>
                          </input>
                          <input>
                            <from>host connection details</from>
                          </input>
                        </parameters>
                      </log>
                    </after-execution>
                    <location>:switch[1]:sequence[2]:switch[1]:sequence[2]:assign[2]</location>
                  </assign>
                </sequence>
              </case>
              <location>:switch[1]:sequence[2]:switch[1]</location>
            </switch>
          </sequence>
        </case>
        <location>:switch[1]</location>
      </switch>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>Get target connection data from custom implementation.</description>
        <version></version>
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name></log-file-name>
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
