    &lt;user-name&gt;emcuser&lt;/user-name&gt;
    &lt;password&gt;bmcbmc&lt;/password&gt;
    &lt;protocol&gt;https&lt;/protocol&gt;
    &lt;port&gt; 5989&lt;/port&gt;
  &lt;/config&gt;
&lt;/configs&gt;
