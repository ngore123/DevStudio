            <from>configuration items</from>
            <to>instance id</to>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[//instance-id/text()]]></xpath>
            </xpath-expression>
          </output>
          <output>
            <from>success status</from>
            <to>success status</to>
          </output>
          <output>
            <from>status message</from>
            <to>status message</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
