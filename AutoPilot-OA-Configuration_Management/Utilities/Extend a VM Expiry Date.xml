          <input>
            <from>configuration name</from>
            <to>configuration name</to>
          </input>
          <input>
            <from>class name</from>
            <to>class name</to>
          </input>
          <input>
            <value>cd-machine-id</value>
            <to>key 1</to>
          </input>
          <input>
            <from>configuration item name</from>
            <to>value 1</to>
          </input>
          <input>
            <from>dataset id</from>
            <to>dataset id</to>
          </input>
