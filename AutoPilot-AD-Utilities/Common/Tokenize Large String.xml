        <from>tokenlisttotal</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <output>
            <to>tokenlisttotal</to>
            <value>
              <tokens />
            </value>
          </output>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>string</from>
            </input>
          </document>
          <result>
            <output>
              <to>string</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens>
              <replacement-token name="delimit">
                <input global="false">
                  <from>delimiter</from>
                </input>
              </replacement-token>
            </xpath-replacement-tokens>
            <xpath><![CDATA[concat(.,"${delimit}")]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <output>
            <to>tokenlistcurrent</to>
            <value>
              <temp />
            </value>
          </output>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>string</from>
            </input>
          </document>
          <result>
            <output>
              <to>loopcount</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[floor(string-length(.) div 10000)+2]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <input>
            <concat>
              <input>
                <value>'</value>
              </input>
              <input required="false">
                <from>delimiter</from>
              </input>
              <input>
                <value>'</value>
              </input>
            </concat>
          </input>
          <output>
            <to>delimiter</to>
          </output>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <from>string</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:assign[1]</location>
      </assign>
      <call-process>
        <process-name>:AutoPilot-AD-Utilities:Common:Create For Loop XML</process-name>
        <parameters>
          <input>
            <from>loopcount</from>
            <to>loopcount</to>
          </input>
          <output>
