  <process-def name=":AutoPilot-AD-Utilities:Common:Tokenize Large String">
    <parameters>
      <input global="false" required="true">
        <description>The string to be parsed on a specified character.</description>
        <from>string</from>
        <to>string</to>
      </input>
      <input global="false" required="true">
