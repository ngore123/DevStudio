              <result>
                <output>
                  <to>length</to>
                </output>
              </result>
              <xpath-expression>
                <xpath-replacement-tokens />
                <xpath><![CDATA[string-length(.) + count(//tokens/*) +1]]></xpath>
              </xpath-expression>
            </assignment>
            <meta>
              <documentation />
              <checkpoint>false</checkpoint>
            </meta>
            <location>:assign[4]</location>
          </assign>
          <assign>
            <assignment>
              <document>
                <input>
                  <from>string</from>
                </input>
              </document>
              <result>
                <output>
                  <to>string</to>
                </output>
              </result>
              <xpath-expression>
                <xpath-replacement-tokens>
                  <replacement-token name="length">
                    <input global="false">
                      <from>length</from>
                    </input>
                  </replacement-token>
                </xpath-replacement-tokens>
                <xpath><![CDATA[substring(., ${length})]]></xpath>
              </xpath-expression>
            </assignment>
            <meta>
              <documentation />
              <checkpoint>false</checkpoint>
            </meta>
            <location>:assign[5]</location>
          </assign>
          <assign>
            <assignment>
              <document>
                <input>
                  <from>tokenlisttotal</from>
                </input>
              </document>
              <result>
                <output>
                  <to>tokenlisttotal</to>
                </output>
              </result>
              <xslt-stylesheet>
                <stylesheet-replacement-tokens>
