            </disable>
          </xsl:if>
          <xsl:if test="string-length('${aliases}')&gt;0">
            <aliases>
              <xsl:value-of select="'${aliases}'" disable-output-escaping="no" />
            </aliases>
          </xsl:if>
          <xsl:if test="string-length('${ipv4 hosts}')&gt;0">
            <ipv4-hosts>
              <xsl:value-of select="'${ipv4 hosts}'" disable-output-escaping="no" />
            </ipv4-hosts>
          </xsl:if>
          <xsl:if test="string-length('${ipv6 hosts}')&gt;0">
            <ipv6-hosts>
              <xsl:value-of select="'${ipv6 hosts}'" disable-output-escaping="no" />
            </ipv6-hosts>
          </xsl:if>
          ${extensible attributes}
          <xsl:if test="string-length('${configure dns}')&gt;0">
            <configure-for-dns>
              <xsl:value-of select="'${configure dns}'" disable-output-escaping="no" />
            </configure-for-dns>
          </xsl:if>
          <xsl:if test="string-length('${comment}')&gt;0">
            <comment>
              <xsl:value-of select="'${comment}'" disable-output-escaping="no" />
            </comment>
          </xsl:if>
          <xsl:if test="string-length('${network-view}')&gt;0">
            <network-view>
              <xsl:value-of select="'${network-view}'" disable-output-escaping="no" />
            </network-view>
          </xsl:if>
          <xsl:if test="string-length('${dns-view}')&gt;0">
            <dns-view>
              <xsl:value-of select="'${dns-view}'" disable-output-escaping="no" />
            </dns-view>
          </xsl:if>
        </parameters>
      </item>
    </items>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
