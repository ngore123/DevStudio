  <process-def name=":AutoPilot-OA-Common_Utilities:BAO_Utilities:REST:Construct JSON Header and default values">
    <parameters>
      <output global="false" required="false">
        <to>requestheader</to>
        <from>requestheader</from>
      </output>
      <output global="false" required="false">
        <to>ssl certificates</to>
        <from>ssl certificates</from>
      </output>
      <output global="false" required="false">
        <to>install certificates</to>
        <from>install certificates</from>
      </output>
      <output global="false" required="false">
        <to>allow unsigned certificates</to>
        <from>allow unsigned certificates</from>
      </output>
      <output global="false" required="false">
        <to>return data format</to>
        <from>return data format</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <output>
            <to>requestheader</to>
            <value>{ "headers" : { "Content-type" : "application/json" }}</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>return data format</to>
            <value>XML</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>ssl certificates</to>
            <value>true</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>install certificates</to>
            <value>true</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>allow unsigned certificates</to>
            <value>true</value>
          </output>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>Since the Rest adapter does not take the content type application json by default, need to construct the header explicitly.
Assigning the default values as well which are 
1. Use SSL certificates: true
2. Return Data type : XML
3. Install Certificates : true
4. Allow unsigned certificates: true
</description>
