<process draft="false" dev-studio-version="8.2.00">
  <process-def name=":AutoPilot-OA-Common_Utilities:BAO_Utilities:REST:Encode URI">
    <parameters>
      <input global="false" required="true">
        <description>Element of a URL that needs encoding.</description>
        <from>uri</from>
        <to>uri</to>
      </input>
      <output global="false" required="false">
        <to>encoded uri</to>
        <from>encoded uri</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <document>
            <input>
              <from>uri</from>
            </input>
          </document>
          <result>
            <output>
              <to>encoded uri</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens />
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:Encoder="java.net.URLEncoder" xmlns:String="java.lang.String" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:value-of select="String:replaceAll(Encoder:encode(., 'utf-8'), '\+', '%20')" disable-output-escaping="no" />
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>OCP</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>Perform URL encoding. This uses Java's URLEncoder. Java's URLEncoder replaces space character with + which is causes target REST services to return errors. We need to replace the + sign with %20.</description>
        <version />
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name />
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>04fdcbb6-f557-41af-9b9c-402e630785d5</process-id>
      <author>Ranganath Samudrala</author>
      <category />
      <status />
      <keywords />
      <systems />
      <last-modified-by>aoadmin</last-modified-by>
      <last-modified>1568626877786</last-modified>
    </meta>
  </process-def>
</process>