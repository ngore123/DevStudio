<process draft="false" dev-studio-version="8.0.00">
  <process-def name=":AutoPilot-OA-Common_Utilities:Get Epoch Seconds By Time Zone">
    <parameters>
      <input global="false" required="false">
        <description>Like EST,  IST, etc. If nothing is provided, local system timezone (itime zone where the workflow is running) is used.</description>
        <from>time zone</from>
        <to>time zone</to>
      </input>
      <output global="false" required="false">
        <to>epoch time</to>
        <from>epoch time</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>false</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>time zone</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>zone id</to>
                  </output>
                </result>
                <xslt-stylesheet>
                  <stylesheet-replacement-tokens />
                  <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:timezone="java.util.TimeZone" xmlns:zoneid="java.time.ZoneId" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:value-of select="timezone:toZoneId(timezone:getDefault())" disable-output-escaping="no" />
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[1]</location>
            </assign>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>time zone</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[string-length(normalize-space(.)) > 0]]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>time zone</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>zone id</to>
                  </output>
                </result>
                <xslt-stylesheet>
                  <stylesheet-replacement-tokens />
                  <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:timezone="java.util.TimeZone" xmlns:zoneid="java.time.ZoneId" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:value-of select="timezone:toZoneId(timezone:getTimeZone(.))" disable-output-escaping="no" />
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[2]:assign[1]</location>
            </assign>
          </sequence>
        </case>
        <location>:switch[1]</location>
      </switch>
      <assign>
        <assignment>
          <document>
            <input>
              <from>zone id</from>
            </input>
          </document>
          <result>
            <output>
              <to>epoch time</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens />
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:zoneid="java.time.ZoneId" xmlns:clock="java.time.Clock" xmlns:instant="java.time.Instant" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:value-of select="instant:getEpochSecond(instant:now(clock:system(zoneid:of(.))))" disable-output-escaping="no" />
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
      <call-process>
        <process-name>:AutoPilot-OA-Common_Utilities:XML_Utilities:Strip Namespaces</process-name>
        <parameters>
          <input>
            <from>epoch time</from>
            <to>XML</to>
          </input>
          <output>
            <from>XML</from>
            <to>epoch time</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <from>zone id</from>
              </input>
              <input>
                <from>epoch time</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:call-process[1]</location>
      </call-process>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>OCP</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>Given a time zone string like GMT, UTC, IST, EST, as specified here: https://docs.oracle.com/javase/8/docs/api/java/time/ZoneId.html#SHORT_IDS OR like Aisa/Kolkata, America/New_York and return that time zone's current time's EPOCH number in seconds.

If invalid value is provided, GMT is used.
If no value is provided, local time zone is used.</description>
        <version />
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name />
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>4bb01635-e3f3-4cb4-8088-9ddfe816a91a</process-id>
      <author>Ranganath Samudrala</author>
      <category />
      <status />
      <keywords />
      <systems />
      <last-modified-by>rsamudrala</last-modified-by>
      <last-modified>1526327204325</last-modified>
    </meta>
  </process-def>
</process>