  <process-def name=":AutoPilot-OA-Event_Orchestration:ITSM:Incident_Management:Wait for Incident Event Association">
    <parameters>
      <input global="false" required="true">
        <from>itsm type</from>
        <to>itsm type</to>
      </input>
      <input global="false" required="true">
        <from>event source type</from>
        <to>event source type</to>
      </input>
