&lt;connection-parameters&gt;
	&lt;use-ssl-certificate&gt;&lt;/use-ssl-certificate&gt;
	&lt;install-certificate&gt;&lt;/install-certificate&gt;
	&lt;allow-unsigned-certificate&gt;&lt;/allow-unsigned-certificate&gt;
