<process draft="false" dev-studio-version="7.6.02.02">
  <process-def name=":BMC_Database_Automation-SA-ITSM_Integration:Utilities:Verify Task Status">
    <parameters>
      <input global="false" required="true">
        <description>task ID which is associated with the BDA Job</description>
        <from>task ID</from>
        <to>task ID</to>
      </input>
      <input global="false" required="false">
        <description>The Task platform which points to a node in the Module Configuration and containing all the necessary configuration parameters</description>
        <from>task platform</from>
        <to>task platform</to>
      </input>
      <output global="false" required="false">
        <to>success status</to>
        <from>success status</from>
      </output>
      <output global="false" required="false">
        <to>status message</to>
        <from>status message</from>
      </output>
      <output global="false" required="false">
        <to>is approved</to>
        <from>is approved</from>
      </output>
      <output global="false" required="false">
        <to>tasks</to>
        <from>tasks</from>
      </output>
