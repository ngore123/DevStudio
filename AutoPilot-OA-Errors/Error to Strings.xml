  <process-def name=":AutoPilot-OA-Errors:Error to Strings">
    <parameters>
      <input global="false" required="true">
        <description>An Error XML as below:
     &lt;error&gt;
       &lt;code&gt;GEN-1001&lt;/code&gt;
       &lt;summary&gt;Invalid configuration name.&lt;/summary&gt;
       &lt;details&gt;Known configuration names are: BMC_AR_System, RemedyForce, ServiceNow and HP ServiceCenter.&lt;/details&gt;
       &lt;resolution&gt;Use a valid configuration name in process input.&lt;/resolution&gt;
     &lt;/error&gt;</description>
        <from>error</from>
        <to>error</to>
      </input>
      <output global="false" required="false">
        <to>error code</to>
        <from>error code</from>
      </output>
      <output global="false" required="false">
        <to>error summary</to>
        <from>error summary</from>
      </output>
      <output global="false" required="false">
        <to>error details</to>
        <from>error details</from>
      </output>
      <output global="false" required="false">
        <to>error resolution</to>
        <from>error resolution</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <document>
            <input>
              <from>error</from>
            </input>
          </document>
          <result>
            <output>
              <to>error code</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//code/text()]]></xpath>
