<process draft="false" dev-studio-version="7.6.01.02">
  <process-def name=":RBA-AD-VMware_Infrastructure:Utilities:Invoke VMware Infrastructure Adapter">
    <parameters>
      <input global="false" required="false">
        <description>The adapter name. The default is VMwareInfrastructure.</description>
        <from>adapter name</from>
        <to>adapter name</to>
      </input>
      <input global="false" required="true">
        <description>operation type
             The operation type as per the operation invoked. Currently, Basic_Vm, Advanced_Vm, Configure_Vm, Monitor_Vm, Host are supported values.</description>
        <from>operation type</from>
        <to>operation type</to>
      </input>
      <input global="false" required="true">
        <description>operation name
              The name of the operation to be invoked on VMware Infrastructure application.</description>
        <from>operation name</from>
        <to>operation name</to>
      </input>
      <input global="false" required="true">
        <description>items
       The items XML used to peform an operation within Virtual Infrastructure Client.

Value takes the form:

&lt;items&gt;
	&lt;item&gt;
		&lt;user-name&gt;&lt;/user-name&gt;
		&lt;password&gt;&lt;/password&gt;
		&lt;parameters&gt;
			..........
		&lt;/parameters&gt;
	&lt;/item&gt;
&lt;/items&gt;</description>
        <from>items</from>
        <to>items</to>
      </input>
      <input global="false" required="false">
        <description>connection parameters [optional]
           The XML containing the metadata needed by the adapter to connect to the target.

Value takes the form:

&lt;connection-parameters&gt;
	&lt;user-name&gt;&lt;/user-name&gt;
	&lt;password&gt;&lt;/password&gt;
&lt;/connection-parameters&gt;</description>
        <from>connection parameters</from>
        <to>connection parameters</to>
      </input>
      <output global="false" required="false">
        <description>adapter response
            An adapter response contains the result returned from an adapter request. The contents of the response will vary by adapter.</description>
        <to>adapter response</to>
        <from>adapter response</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <call-process>
        <process-name>:RBA-AD-VMware_Infrastructure:Utilities:Set Default Adapter Name</process-name>
        <parameters>
          <input>
            <from>adapter name</from>
            <to>adapter name</to>
          </input>
          <output>
            <from>adapter name</from>
            <to>adapter name</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <after-execution>
          <console-output>
            <type>INFO</type>
            <summary>
              <concat>
                <input>
                  <value></value>
                </input>
              </concat>
            </summary>
            <detail>
              <concat>
                <input>
                  <value></value>
                </input>
              </concat>
            </detail>
          </console-output>
        </after-execution>
        <location>:call-process[1]</location>
      </call-process>
      <assign>
        <assignment>
          <output>
            <to>request</to>
            <value>
              <empty />
            </value>
          </output>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="items">
                <input global="false">
                  <from>items</from>
                </input>
              </replacement-token>
              <replacement-token name="connection parameters">
                <input global="false">
                  <from>connection parameters</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <request>${connection parameters}${items}</request>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
      <assign>
        <assignment>
          <document>
            <input>
              <from>request</from>
            </input>
          </document>
          <result>
            <output>
              <to>adapter request</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="operation type">
                <input global="false">
                  <from>operation type</from>
                </input>
              </replacement-token>
              <replacement-token name="operation name">
                <input global="false">
                  <from>operation name</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="yes" />
  <xsl:template match="/">
    <request-data>
      <vmware-infrastructure-request>
        <xsl:if test="//connection-parameters">
          <xsl:copy-of select="//connection-parameters/*" />
        </xsl:if>
        <operation-type>${operation type}</operation-type>
        <operation-name>${operation name}</operation-name>
        <xsl:if test="//items/item">
          <xsl:copy-of select="//items/item/*" />
        </xsl:if>
      </vmware-infrastructure-request>
    </request-data>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[2]</location>
      </assign>
      <call-adapter>
        <parameters>
          <input global="false">
            <from>adapter name</from>
          </input>
          <input>
            <value>
              <adapter-request>
                <peer-location>
                  <location>any</location>
                </peer-location>
              </adapter-request>
            </value>
          </input>
          <input global="false">
            <from>adapter request</from>
          </input>
          <input global="false">
            <from>adapter request</from>
          </input>
          <output global="false">
            <to>adapter response</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <before-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>Adapter Request</value>
              </input>
              <input>
                <from>adapter request</from>
              </input>
            </parameters>
          </log>
        </before-execution>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>Adapter Response</value>
              </input>
              <input>
                <from>adapter response</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:call-adapter[1]</location>
      </call-adapter>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>Invoke VMware Infrastructure Adapter
     Creates a valid adapter request and invokes the VMware Infrastructure adapter.</description>
        <version>1.0</version>
      </documentation>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>5db2f762-231a-378f-96f8-012784237eaa</process-id>
      <author />
      <category />
      <status />
      <keywords />
      <systems />
      <last-modified-by />
      <last-modified>1288251426027</last-modified>
    </meta>
  </process-def>
</process>