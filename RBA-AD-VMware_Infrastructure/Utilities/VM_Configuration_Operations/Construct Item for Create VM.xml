<process draft="false" dev-studio-version="7.6.02.04">
  <process-def name=":RBA-AD-VMware_Infrastructure:Utilities:VM_Configuration_Operations:Construct Item for Create VM">
    <parameters>
      <input global="false" required="false">
        <description>cluster compute resource [optional]

	Cluster name to which the host-system is attached to.

Valid value: String
</description>
        <from>cluster compute resource</from>
        <to>cluster compute resource</to>
      </input>
      <input global="false" required="false">
        <description>folder [optional]
      The folder in which the virtual machine should be created. In absence of this tag, virtual machine will be created in the default folder – “vm”
 
Valid value:  String
</description>
        <from>folder</from>
        <to>folder</to>
      </input>
      <input global="false" required="false">
        <description>host [optional]
       DNS name of the target host for the virtual machine. If not specified, 
-if resource pool is not specified, current host is used. 
-if resource pool is specified, and the target pool represents a stand-alone host, the host is used. 
-if resource pool is specified, and the target pool represents a DRS-enabled cluster, a host selected by DRS is used. 
-if resource pool is specified and the target pool represents a cluster without DRS enabled, an InvalidArgument exception be thrown. </description>
        <from>host</from>
        <to>host</to>
      </input>
      <input global="false" required="true">
        <description>Name of the datacenter where virtual machine will be created.</description>
        <from>datacenter</from>
        <to>datacenter</to>
      </input>
      <input global="false" required="true">
        <description>virtual machine name
               Display name of the virtual machine.</description>
        <from>virtual machine name</from>
        <to>virtual machine name</to>
      </input>
      <input global="false" required="true">
        <description>guest OS
       guest operating system.</description>
        <from>guest OS</from>
        <to>guest OS</to>
      </input>
      <input global="false" required="true">
        <description>virtual machine datastore location
               Datastore location to the configuration file for the virtual machine, e.g., the .vmx file.</description>
        <from>virtual machine datastore location</from>
        <to>virtual machine datastore location</to>
      </input>
      <input global="false" required="false">
        <description>number ofCPUs [optional]
        Number of virtual processors in a virtual machine. </description>
        <from>number of CPUs</from>
        <to>number of CPUs</to>
      </input>
      <input global="false" required="false">
        <description>memory in MB [optional]
        Size of a virtual machine's memory, in MB</description>
        <from>memory in MB</from>
        <to>memory in MB</to>
      </input>
      <input global="false" required="false">
        <description>Indicates whether or not memory can be added to the virtual machine while it is running. 

Valid Values : true, false</description>
        <from>memory hot add enabled</from>
        <to>memory hot add enabled</to>
      </input>
      <input global="false" required="false">
        <description>Indicates whether or not virtual processors can be added to the virtual machine while it is running. 

Valid Values : true, false</description>
        <from>CPU hot add enabled</from>
        <to>CPU hot add enabled</to>
      </input>
      <input global="false" required="false">
        <description>Indicates whether or not virtual processors can be removed from the virtual machine while it is running. 

Valid Values : true, false</description>
        <from>CPU hot remove enabled</from>
        <to>CPU hot remove enabled</to>
      </input>
      <input global="false" required="false">
        <description>resource pool [optional] 
	Resource pool to which the virtual machine will be attached.

Valid value: String
</description>
        <from>resource pool</from>
        <to>resource pool</to>
      </input>
      <output global="false" required="false">
        <to>items</to>
        <from>items</from>
      </output>
