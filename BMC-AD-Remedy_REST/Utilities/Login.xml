<process draft="false" dev-studio-version="8.2.00">
  <process-def name=":BMC-AD-Remedy_REST:Utilities:Login">
    <parameters>
      <input global="false" required="true">
        <description>Adapter supporting requests to Remedy REST API</description>
        <from>adapter name</from>
        <to>adapter name</to>
      </input>
      <input global="false" required="true">
        <description>Remedy REST API URL. For example: http(s)://&lt;remedy-host&gt;:&lt;remedy-rest-api-port&gt;

By default, out of the box, Remedy REST API server port is 8008.

http://remedy-server-name:8008</description>
        <from>url</from>
        <to>url</to>
      </input>
      <input global="false" required="true">
        <description>User name used to login to Remedy REST API.</description>
        <from>user name</from>
        <to>user name</to>
      </input>
      <input global="false" required="true">
        <description>Password used to login to Remedy REST API.</description>
        <from>password</from>
        <to>password</to>
      </input>
      <output global="false" required="false">
        <description>Remedy API authorization token</description>
        <to>authorization token</to>
        <from>authorization token</from>
      </output>
      <output global="false" required="false">
        <description>success or failure</description>
        <to>status</to>
        <from>status</from>
      </output>
      <output global="false" required="false">
        <description>HTTP status code</description>
        <to>status code</to>
        <from>status code</from>
      </output>
      <output global="false" required="false">
        <description>Error message if status is failure</description>
        <to>error message</to>
        <from>error message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <input>
            <concat>
              <input required="false">
                <from>url</from>
              </input>
              <input>
                <value>/api/jwt/login</value>
              </input>
            </concat>
          </input>
          <output>
            <to>url</to>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>headers</to>
            <value>{
   "headers": {
       "Content-Type": "application/x-www-form-urlencoded"
    }
}</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>status</to>
            <value>success</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>error message</to>
            <value></value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>authorization token</to>
            <value></value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>status code</to>
            <value></value>
          </output>
        </assignment>
        <assignment>
          <input>
            <concat>
              <input>
                <value>username=</value>
              </input>
              <input required="false">
                <from>user name</from>
              </input>
              <input>
                <value>&amp;password=</value>
              </input>
              <input required="false">
                <from>password</from>
              </input>
            </concat>
          </input>
          <output>
            <to>body</to>
          </output>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>=== URL ===</value>
              </input>
              <input>
                <from>url</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:assign[1]</location>
      </assign>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>false</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>user name</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>body</to>
                  </output>
                </result>
                <xslt-stylesheet>
                  <stylesheet-replacement-tokens>
                    <replacement-token name="password">
                      <input global="false">
                        <from>password</from>
                      </input>
                    </replacement-token>
                  </stylesheet-replacement-tokens>
                  <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" cdata-section-elements="value" />
  <xsl:template match="/">
    <value>
      <xsl:value-of select="concat('username=', .,  '&amp;password=', '${password}')" disable-output-escaping="no" />
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <location>:switch[1]:sequence[1]:assign[1]</location>
            </assign>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>password</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[boolean(//*[name() = 'EncryptedData'])]]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <assign>
              <assignment>
                <input>
                  <concat>
                    <input>
                      <value>username=</value>
                    </input>
                    <input required="false">
                      <from>user name</from>
                    </input>
                    <input>
                      <value>&amp;password=</value>
                    </input>
                    <input required="false">
                      <from>password</from>
                    </input>
                  </concat>
                </input>
                <output>
                  <to>body</to>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <after-execution>
                <log>
                  <level>debug</level>
                  <parameters>
                    <input>
                      <value>=== URL ===</value>
                    </input>
                    <input>
                      <from>url</from>
                    </input>
                  </parameters>
                </log>
              </after-execution>
              <location>:switch[1]:sequence[2]:assign[1]</location>
            </assign>
          </sequence>
        </case>
        <location>:switch[1]</location>
      </switch>
      <call-process>
        <process-name>:AutoPilot-AD-Utilities:REST:Post</process-name>
        <parameters>
          <input>
            <from>adapter name</from>
            <to>adapter name</to>
          </input>
          <input>
            <from>url</from>
            <to>url</to>
          </input>
          <input>
            <from>headers</from>
            <to>headers</to>
          </input>
          <input>
            <from>body</from>
            <to>body</to>
          </input>
          <input>
            <value>xml</value>
            <to>return data format</to>
          </input>
          <output>
            <from>adapter response</from>
            <to>adapter response</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
      <assign>
        <assignment>
          <document>
            <input>
              <from>adapter response</from>
            </input>
          </document>
          <result>
            <output>
              <to>status code</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[//status-line/code/text()]]></xpath>
          </xpath-expression>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[2]</location>
      </assign>
      <switch>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>true</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <execute-all-applicable-cases>false</execute-all-applicable-cases>
        <default>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>adapter response</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>error message</to>
                  </output>
                </result>
                <xpath-expression>
                  <xpath-replacement-tokens />
                  <xpath><![CDATA[//status-line/reason/text()]]></xpath>
                </xpath-expression>
              </assignment>
              <assignment>
                <output>
                  <to>status</to>
                  <value>failure</value>
                </output>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <before-execution>
                <log>
                  <level>debug</level>
                  <parameters>
                    <input>
                      <value>============login adapter response============</value>
                    </input>
                    <input>
                      <from>adapter response</from>
                    </input>
                  </parameters>
                </log>
              </before-execution>
              <location>:switch[2]:sequence[1]:assign[1]</location>
            </assign>
          </sequence>
        </default>
        <case>
          <condition>
            <document>
              <input>
                <from>adapter response</from>
              </input>
            </document>
            <xpath-expression>
              <xpath-replacement-tokens />
              <xpath><![CDATA[//status-line/code/text() = '200' and (string-length(normalize-space(//message-body/non-xml-data-response/text())) > 0 or string-length(normalize-space(//message-body/text())) > 0)]]></xpath>
            </xpath-expression>
          </condition>
          <sequence>
            <assign>
              <assignment>
                <document>
                  <input>
                    <from>adapter response</from>
                  </input>
                </document>
                <result>
                  <output>
                    <to>authorization token</to>
                  </output>
                </result>
                <xslt-stylesheet>
                  <stylesheet-replacement-tokens />
                  <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="boolean(//message-body/non-xml-data-response)">
          <xsl:value-of select="//message-body/non-xml-data-response/text()" disable-output-escaping="no" />
        </xsl:when>
        <xsl:when test="string-length(normalize-space(//message-body/text())) &gt; 0">
          <xsl:value-of select="//message-body/text()" disable-output-escaping="no" />
        </xsl:when>
        <xsl:otherwise>
          <xsl:text />
        </xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
                </xslt-stylesheet>
              </assignment>
              <meta>
                <documentation />
                <checkpoint>false</checkpoint>
              </meta>
              <before-execution>
                <log>
                  <level>debug</level>
                  <parameters>
                    <input>
                      <value>============login adapter response============</value>
                    </input>
                    <input>
                      <from>adapter response</from>
                    </input>
                  </parameters>
                </log>
              </before-execution>
              <location>:switch[2]:sequence[2]:assign[1]</location>
            </assign>
          </sequence>
        </case>
        <location>:switch[2]</location>
      </switch>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>OCP</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>Login to Remedy using REST API.</description>
        <version></version>
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name></log-file-name>
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>028a12b8-4f41-4c8f-8e7a-3c1384163757</process-id>
      <author>Ranganath Samudrala</author>
      <category>Remedy REST API</category>
      <status></status>
      <keywords></keywords>
      <systems></systems>
      <last-modified-by>aoadmin</last-modified-by>
      <last-modified>1575998223034</last-modified>
    </meta>
  </process-def>
</process>