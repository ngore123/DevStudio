<process draft="false" dev-studio-version="8.2.00">
  <process-def name=":BMC-AD-Remedy_REST:Utilities:Get Schema">
    <parameters>
      <input global="false" required="true">
        <description>Adapter supporting requests to Remedy REST API</description>
        <from>adapter name</from>
        <to>adapter name</to>
      </input>
      <input global="false" required="true">
        <description>Remedy REST API URL. For example: http(s)://&lt;remedy-host&gt;:&lt;remedy-rest-api-port&gt;

By default, out of the box, Remedy REST API server port is 8008.

http://remedy-server-name:8008</description>
        <from>url</from>
        <to>url</to>
      </input>
      <input global="false" required="true">
        <description>Authorization token received via login to Remedy REST API.</description>
        <from>authorization token</from>
        <to>authorization token</to>
      </input>
      <input global="false" required="true">
        <description>Name of the Remedy form from which entries are retrieved.</description>
        <from>form name</from>
        <to>form name</to>
      </input>
      <input global="false" required="false">
        <description>Field ID to be used to retrieve data. If none provided all fields are retrieved.</description>
        <from>field id</from>
        <to>field id</to>
      </input>
      <input global="false" required="false">
        <description>Return data in JSON or XML format. Possible values are json and xml. Default value is json.</description>
        <from>return data format</from>
        <to>return data format</to>
      </input>
      <output global="false" required="false">
        <description>HTTP response header  in XML or JSON format based on return data format.</description>
        <to>response headers</to>
        <from>response headers</from>
      </output>
      <output global="false" required="false">
        <description>REST response body  in XML or JSON format based on return data format.</description>
        <to>response body</to>
        <from>response body</from>
      </output>
      <output global="false" required="false">
        <description>success/failure</description>
        <to>status</to>
        <from>status</from>
      </output>
      <output global="false" required="false">
        <description>HTTP return code</description>
        <to>status code</to>
        <from>status code</from>
      </output>
      <output global="false" required="false">
        <description>Error message if any.</description>
        <to>error message</to>
        <from>error message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <input global="true">
            <configuration>:BMC-AD-Remedy_REST:BMC_AR_System:API_URI</configuration>
          </input>
          <output>
            <to>api uri</to>
          </output>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>url</from>
            </input>
          </document>
          <result>
            <output>
              <to>url</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="api uri">
                <input global="false">
                  <from>api uri</from>
                </input>
              </replacement-token>
              <replacement-token name="form name">
                <input global="false">
                  <from>form name</from>
                </input>
              </replacement-token>
              <replacement-token name="field id">
                <input global="false">
                  <from>field id</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:Encoder="java.net.URLEncoder" xmlns:String="java.lang.String" version="1.0">
  <xsl:output indent="no" cdata-section-elements="value" />
  <xsl:variable name="formName" select="String:replaceAll(Encoder:encode('${form name}', 'utf-8'), '\+', '%20')" />
  <xsl:variable name="tmp" select="concat(., '${api uri}', 'fields', '/',  $formName)" />
  <xsl:variable name="queryParam" select="'?field_type=DATA,TRIM,CONTROL,PAGE,PAGEHOLDER,COLUMN,ATTACH,ATTACHPOOL'" />
  <xsl:template match="/">
    <value>
      <xsl:choose>
        <xsl:when test="string-length(normalize-space('${field id}')) &gt; 0">
          <xsl:value-of select="concat($tmp, '/', '${field id}', $queryParam)" disable-output-escaping="no" />
        </xsl:when>
        <xsl:otherwise>
          <xsl:value-of select="concat($tmp, $queryParam)" disable-output-escaping="no" />
        </xsl:otherwise>
      </xsl:choose>
    </value>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>url</from>
            </input>
          </document>
          <result>
            <output>
              <to>use ssl certiificate</to>
            </output>
          </result>
          <xpath-expression>
            <xpath-replacement-tokens />
            <xpath><![CDATA[starts-with(normalize-space(.), "https")]]></xpath>
          </xpath-expression>
        </assignment>
        <assignment>
          <input>
            <concat>
              <input>
                <value>{
   "headers": {
       "Authorization" : "AR-JWT </value>
              </input>
              <input required="false">
                <from>authorization token</from>
              </input>
              <input>
                <value>",
       "Content-Type": "application/json"
    }
}</value>
              </input>
            </concat>
          </input>
          <output>
            <to>headers</to>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>status</to>
            <value>success</value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>error message</to>
            <value></value>
          </output>
        </assignment>
        <assignment>
          <input>
            <from>use ssl certiificate</from>
          </input>
          <output>
            <to>install certificate</to>
          </output>
        </assignment>
        <assignment>
          <input>
            <from>use ssl certiificate</from>
          </input>
          <output>
            <to>allow unsigned certificate</to>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>response headers</to>
            <value></value>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>response body</to>
            <value></value>
          </output>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
      <call-process>
        <process-name>:AutoPilot-AD-Utilities:REST:Get</process-name>
        <parameters>
          <input>
            <from>adapter name</from>
            <to>adapter name</to>
          </input>
          <input>
            <from>url</from>
            <to>url</to>
          </input>
          <input>
            <from>headers</from>
            <to>headers</to>
          </input>
          <input>
            <value>xml</value>
            <to>return data format</to>
          </input>
          <input>
            <from>use ssl certiificate</from>
            <to>use ssl certificate</to>
          </input>
          <input>
            <from>install certificate</from>
            <to>install certificate</to>
          </input>
          <input>
            <from>allow unsigned certificate</from>
            <to>allow unsigned certificate</to>
          </input>
          <output>
            <from>adapter response</from>
            <to>adapter response</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
      <call-process>
        <process-name>:AutoPilot-OA-Common_Utilities:BAO_Utilities:REST:Process Response</process-name>
        <parameters>
          <input>
            <from>adapter response</from>
            <to>adapter response</to>
          </input>
          <input>
            <from>return data format</from>
            <to>return data format</to>
          </input>
          <output>
            <from>response headers</from>
            <to>response headers</to>
          </output>
          <output>
            <from>response body</from>
            <to>response body</to>
          </output>
          <output>
            <from>status</from>
            <to>status</to>
          </output>
          <output>
            <from>status code</from>
            <to>status code</to>
          </output>
          <output>
            <from>error message</from>
            <to>error message</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[2]</location>
      </call-process>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
        <consumer>OCP</consumer>
        <consumer>SOAP</consumer>
      </expose-to>
      <documentation>
        <description>Find items in  Remedy using REST API.</description>
        <version></version>
      </documentation>
      <logging-options>
        <is-enabled>false</is-enabled>
        <log-file-name></log-file-name>
      </logging-options>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>true</record-metrics>
