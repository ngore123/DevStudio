<process draft="false" dev-studio-version="7.6.02.02">
  <process-def name=":AO-AD-BMC_Database_Automation:Utilities:Invoke BMC Database Automation Adapter">
    <parameters>
      <input global="false" required="false">
        <description>The adapter name. The default is BDAActorAdapter.</description>
        <from>adapter name</from>
        <to>adapter name</to>
      </input>
      <input global="false" required="true">
        <description>operation name
              The name of the operation to be invoked on BMC Database Automation Application</description>
        <from>operation name</from>
        <to>operation name</to>
      </input>
      <input global="false" required="false">
        <description>items
       The items XML used to peform an operation within the BMC Database Automation.

Value takes the form:

&lt;items&gt;
      &lt;item&gt;

      &lt;/item&gt;
&lt;/items&gt;</description>
        <from>items</from>
        <to>items</to>
      </input>
      <input global="false" required="false">
        <description>connection parameters [optional]
           The XML containing the metadata needed by the adapter to connect to the target.

Value takes the form:

&lt;connection-parameters&gt;
	&lt;use-ssl-certificate&gt;&lt;/use-ssl-certificate&gt;
	&lt;install-certificate&gt;&lt;/install-certificate&gt;
	&lt;allow-unsigned-certificate&gt;&lt;/allow-unsigned-certificate&gt;
	&lt;passphrase&gt;&lt;/passphrase&gt;
&lt;/connection-parameters&gt;</description>
        <from>connection parameters</from>
        <to>connection parameters</to>
      </input>
      <input global="false" required="false">
        <description>Mutual Authentication parameters [optional]
           The XML containing the information needed by the adapter to perform a client authentication.

Value takes the form:

&lt;mutual-authentication-parameters&gt;
	&lt;signature-properties mode="ket-data"&gt;
		&lt;private-key-data&gt;&lt;/private-key-data&gt;
		&lt;certificate-data&gt;&lt;/certificate-data&gt;
	&lt;/signature-properties&gt;
&lt;/mutual-authentication-parameters&gt;

&lt;mutual-authentication-parameters&gt;
	&lt;signature-properties mode="ketstore"&gt;
		&lt;keystore-file&gt;&lt;/keystore-file&gt;
		&lt;keystore-password&gt;&lt;/keystore-password&gt;
		&lt;alias&gt;&lt;/alias&gt;
	&lt;/signature-properties&gt;
&lt;/mutual-authentication-parameters&gt;

&lt;mutual-authentication-parameters&gt;
	&lt;signature-properties mode="ket-files"&gt;
		&lt;private-key-file&gt;&lt;/private-key-file&gt;
		&lt;certificate-file&gt;&lt;/certificate-file&gt;		
	&lt;/signature-properties&gt;
&lt;/mutual-authentication-parameters&gt;</description>
        <from>mutual authentication parameters</from>
        <to>mutual authentication parameters</to>
      </input>
      <output global="false" required="false">
        <to>adapter response</to>
        <from>adapter response</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <call-process>
        <process-name>:AO-AD-BMC_Database_Automation:Utilities:Set Default Adapter Name</process-name>
        <parameters>
          <input>
            <from>adapter name</from>
            <to>adapter name</to>
          </input>
          <output>
            <from>adapter name</from>
            <to>adapter name</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
      <assign>
        <assignment>
          <output>
            <to>request</to>
            <value>
              <empty />
            </value>
          </output>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="connection parameters">
                <input global="false">
                  <from>connection parameters</from>
                </input>
              </replacement-token>
              <replacement-token name="items">
                <input global="false">
                  <from>items</from>
                </input>
              </replacement-token>
              <replacement-token name="mutual authentication parameters">
                <input global="false">
                  <from>mutual authentication parameters</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="no" />
  <xsl:template match="/">
    <request>${connection parameters}${items}${mutual authentication parameters}</request>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[1]</location>
      </assign>
      <assign>
        <assignment>
          <document>
            <input>
              <from>request</from>
            </input>
          </document>
          <result>
            <output>
              <to>adapter request</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="operation name">
                <input global="false">
                  <from>operation name</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="yes" />
  <xsl:template match="/">
    <request-data>
      <bda-request>
        <xsl:if test="//connection-parameters">
          <xsl:copy-of select="//connection-parameters/*" />
        </xsl:if>
        <operation-name>${operation name}</operation-name>
        <xsl:if test="//items/item">
          <xsl:copy-of select="//items/item/*" />
        </xsl:if>
        <xsl:if test="//mutual-authentication-parameters">
          <xsl:copy-of select="//mutual-authentication-parameters/*" />
        </xsl:if>
      </bda-request>
    </request-data>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <location>:assign[2]</location>
      </assign>
      <call-adapter>
        <parameters>
          <input global="false">
            <from>adapter name</from>
          </input>
          <input>
            <value>
              <adapter-request>
                <peer-location>
                  <location>any</location>
                </peer-location>
              </adapter-request>
            </value>
          </input>
          <input global="false">
            <from>adapter request</from>
          </input>
          <input global="false">
            <from>adapter request</from>
          </input>
          <output global="false">
            <to>adapter response</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <before-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <from>adapter request</from>
              </input>
            </parameters>
          </log>
        </before-execution>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <from>adapter response</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:call-adapter[1]</location>
      </call-adapter>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>Invoke BDA Actor Adapter
     Creates a valid adapter request and invokes the BDA Actor adapter.</description>
        <version></version>
      </documentation>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>cf3d231d-751d-4bc7-9ace-2fbb99516ad2</process-id>
      <author>admin</author>
      <category></category>
      <status></status>
      <keywords></keywords>
      <systems></systems>
      <last-modified-by>admin</last-modified-by>
      <last-modified>1317723849780</last-modified>
    </meta>
  </process-def>
</process>