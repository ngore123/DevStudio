<process draft="false" dev-studio-version="7.6.02.02">
  <process-def name=":AutoPilot-OA-Problem_Management:Investigation:Setup_Validation:Test Update Investigation Status">
    <parameters>
      <input global="false" required="true">
        <description>String value - The name of a configuration item defined in a configuration module. 

Example: BMC_AR_System</description>
        <from>configuration name</from>
        <to>configuration name</to>
      </input>
      <input global="false" required="true">
        <description>String value - The problem id number. 

Remedy Example: PBI000000000006</description>
        <from>problem id</from>
        <to>problem id</to>
      </input>
      <input global="false" required="true">
        <description>String value - The new status</description>
        <from>new investigation status</from>
        <to>new investigation status</to>
      </input>
      <input global="false" required="true">
        <description>EPOCH date - target resolution date

Example: 1324717519</description>
        <from>resolution date</from>
        <to>resolution date</to>
      </input>
      <output global="false" required="false">
        <description>XML output that contains single or multiple Concept elements. A concept is an XML document containing specific elements used to assign multiple values to a single context item. Each value is associated with an element of the Concept. </description>
        <to>investigations</to>
        <from>investigations</from>
      </output>
      <output global="false" required="true">
        <description>String value - Indicates whether or not the process completed successfully. 

Valid values: success, failure.
</description>
        <to>success status</to>
        <from>success status</from>
      </output>
      <output global="false" required="true">
        <description>String value -  A verbose  process specific string that explains the value of success status.

</description>
        <to>status message</to>
        <from>status message</from>
      </output>
    </parameters>
    <access />
    <sequence>
      <assign>
        <assignment>
          <input>
            <from>problem id</from>
          </input>
          <output>
            <to>investigation</to>
            <concept type="AutoPilot-OA-Problem_Management:Investigation">
              <attribute>problem-id</attribute>
            </concept>
          </output>
        </assignment>
        <assignment>
          <input>
            <from>new investigation status</from>
          </input>
          <output>
            <to>investigation</to>
            <concept type="AutoPilot-OA-Problem_Management:Investigation">
              <attribute>investigation-status</attribute>
            </concept>
          </output>
        </assignment>
        <assignment>
          <output>
            <to>investigation</to>
            <value>MODIFY</value>
            <concept type="AutoPilot-OA-Problem_Management:Investigation">
              <attribute>action</attribute>
            </concept>
          </output>
        </assignment>
        <assignment>
          <input>
            <from>resolution date</from>
          </input>
          <output>
            <to>investigation</to>
            <concept type="AutoPilot-OA-Problem_Management:Investigation">
              <attribute>target-resolution-date</attribute>
            </concept>
          </output>
        </assignment>
        <assignment>
          <document>
            <input>
              <from>investigation</from>
            </input>
          </document>
          <result>
            <output>
              <to>investigations</to>
            </output>
          </result>
          <xslt-stylesheet>
            <stylesheet-replacement-tokens>
              <replacement-token name="investigation">
                <input global="false">
                  <from>investigation</from>
                </input>
              </replacement-token>
            </stylesheet-replacement-tokens>
            <stylesheet><![CDATA[<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
  <xsl:output indent="yes" cdata-section-elements="location" />
  <xsl:template match="/">
    <Investigations>
      <xsl:choose>
        <xsl:when test="string-length(//investigation) &gt; 0">
          <xsl:copy-of select="//investigation" />
        </xsl:when>
        <xsl:otherwise>${investigation}</xsl:otherwise>
      </xsl:choose>
    </Investigations>
  </xsl:template>
</xsl:stylesheet>]]></stylesheet>
          </xslt-stylesheet>
        </assignment>
        <meta>
          <documentation />
          <checkpoint>false</checkpoint>
        </meta>
        <after-execution>
          <log>
            <level>debug</level>
            <parameters>
              <input>
                <value>Show contents of investigation</value>
              </input>
              <input>
                <from>investigation</from>
              </input>
            </parameters>
          </log>
        </after-execution>
        <location>:assign[1]</location>
      </assign>
      <call-process>
        <process-name>:AutoPilot-OA-Problem_Management:Investigation:Update Investigations</process-name>
        <parameters>
          <input>
            <from>investigations</from>
            <to>investigations</to>
          </input>
          <input>
            <from>configuration name</from>
            <to>configuration name</to>
          </input>
          <output>
            <from>investigations</from>
            <to>investigations</to>
          </output>
          <output>
            <from>success status</from>
            <to>success status</to>
          </output>
          <output>
            <from>status message</from>
            <to>status message</to>
          </output>
        </parameters>
        <meta>
          <documentation />
          <run-mode-handling>
            <run-mode>OCP</run-mode>
            <allow-step-into>false</allow-step-into>
          </run-mode-handling>
          <checkpoint>false</checkpoint>
        </meta>
        <location>:call-process[1]</location>
      </call-process>
    </sequence>
    <meta>
      <expose-to>
        <consumer>RULE</consumer>
        <consumer>SCHEDULE</consumer>
      </expose-to>
      <documentation>
        <description>This workflow tests the process of updating an exisiting Problem Investigation Record. </description>
        <version>1.0</version>
      </documentation>
      <peer-location>
        <location>any</location>
      </peer-location>
      <record-metrics>false</record-metrics>
      <process-id>ca4f6cd8-556b-30a0-8173-ea53bc3bdad7</process-id>
      <author>admin</author>
      <category></category>
      <status></status>
      <keywords></keywords>
      <systems></systems>
      <last-modified-by>admin</last-modified-by>
      <last-modified>1324631256595</last-modified>
    </meta>
  </process-def>
</process>